@model WebApplicationForWarehouseManagementOfOfficeSupplies.DTOs.PendingOrdersDetailsViewModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header with Back Button -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-1" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
                    </svg>
                    Back to Orders
                </a>

                @{
                    string statusBadgeClass = "bg-secondary";

                    if (Model.Status.ToLower() == "pending")
                    {
                        statusBadgeClass = "bg-warning text-dark";
                    }
                    else if (Model.Status.ToLower() == "confirmed")
                    {
                        statusBadgeClass = "bg-info text-dark";
                    }
                    else if (Model.Status.ToLower() == "sent")
                    {
                        statusBadgeClass = "bg-info text-dark";
                    }
                    else if (Model.Status.ToLower() == "delivered")
                    {
                        statusBadgeClass = "bg-success";
                    }
                    else if (Model.Status.ToLower() == "rejected")
                    {
                        statusBadgeClass = "bg-danger";
                    }
                }
                <span class="badge @statusBadgeClass fs-6 px-3 py-2">@Model.Status</span>
            </div>

            <!-- Order Summary Card -->
            <div class="card shadow border-0 rounded-3 mb-4">
                <div class="card-header bg-white p-4 border-bottom-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="card-title fw-bold mb-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-box-seam text-primary me-2" viewBox="0 0 16 16">
                                <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2zm3.564 1.426L5.596 5 8 5.961 14.154 3.5zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z" />
                            </svg>
                            Order #@Model.RequestID
                        </h2>
                        <div class="text-end">
                            <h3 class="fw-bold text-primary mb-0">@Model.TotalPrice.ToString("C")</h3>
                            <small class="text-muted">Created on @Model.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <!-- Company Information -->
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <h5 class="mb-3 d-flex align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-building me-2 text-primary" viewBox="0 0 16 16">
                                        <path d="M4 2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zM4 5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zM7.5 5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm2.5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zM4.5 8a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm2.5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5z" />
                                        <path d="M2 1a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1zm11 0H3v14h3v-2.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 .5.5V15h3z" />
                                    </svg>
                                    Company Information
                                </h5>
                                <div class="mb-2">
                                    <div class="fw-bold fs-5 mb-1">@Model.CompanyName</div>
                                    <div class="text-muted">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-geo-alt me-1" viewBox="0 0 16 16">
                                            <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10" />
                                            <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                                        </svg>
                                        @Model.CompanyAddress
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <div class="text-muted">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-telephone me-1" viewBox="0 0 16 16">
                                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z" />
                                        </svg>
                                        @Model.CompanyPhone
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Order Information -->
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <h5 class="mb-3 d-flex align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-info-circle me-2 text-primary" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                                    </svg>
                                    Order Information
                                </h5>
                                <div class="row mb-2">
                                    <div class="col-5 text-muted">Requested by:</div>
                                    <div class="col-7 fw-medium">@Model.UserName</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-5 text-muted">Created at:</div>
                                    <div class="col-7 fw-medium">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-5 text-muted">Status:</div>
                                    <div class="col-7">
                                        <span class="badge @statusBadgeClass">@Model.Status</span>
                                    </div>
                                </div>

                                <!-- Order Timeline -->
                                <div class="mt-3 pt-3 border-top">
                                    <div class="d-flex align-items-center">
                                        <div class="position-relative me-3">
                                            <div class="bg-success rounded-circle" style="width: 12px; height: 12px;"></div>
                                            <div class="position-absolute bg-secondary" style="width: 2px; height: 100%; left: 5px; top: 12px;"></div>
                                        </div>
                                        <div>
                                            <div class="fw-medium">Order Created</div>
                                            <small class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </div>
                                    </div>

                                    @if (Model.Status != "Pending" && Model.Status != "Rejected")
                                    {
                                        <div class="d-flex align-items-center mt-3">
                                            <div class="position-relative me-3">
                                                <div class="bg-success rounded-circle" style="width: 12px; height: 12px;"></div>
                                                <div class="position-absolute bg-secondary" style="width: 2px; height: 100%; left: 5px; top: 12px;"></div>
                                            </div>
                                            <div>
                                                <div class="fw-medium">Order Confirmed</div>
                                                <small class="text-muted">Processing</small>
                                            </div>
                                        </div>
                                    }

                                    @if (Model.Status == "Sent" || Model.Status == "Delivered")
                                    {
                                        <div class="d-flex align-items-center mt-3">
                                            <div class="position-relative me-3">
                                                <div class="bg-success rounded-circle" style="width: 12px; height: 12px;"></div>
                                                <div class="position-absolute bg-secondary" style="width: 2px; height: 100%; left: 5px; top: 12px;"></div>
                                            </div>
                                            <div>
                                                <div class="fw-medium">Order Shipped</div>
                                                <small class="text-muted">In transit</small>
                                            </div>
                                        </div>
                                    }

                                    @if (Model.Status == "Delivered")
                                    {
                                        <div class="d-flex align-items-center mt-3">
                                            <div class="position-relative me-3">
                                                <div class="bg-success rounded-circle" style="width: 12px; height: 12px;"></div>
                                            </div>
                                            <div>
                                                <div class="fw-medium">Order Delivered</div>
                                                <small class="text-muted">Completed</small>
                                            </div>
                                        </div>
                                    }

                                    @if (Model.Status == "Rejected")
                                    {
                                        <div class="d-flex align-items-center mt-3">
                                            <div class="position-relative me-3">
                                                <div class="bg-danger rounded-circle" style="width: 12px; height: 12px;"></div>
                                            </div>
                                            <div>
                                                <div class="fw-medium">Order Cancelled</div>
                                                <small class="text-muted">Cancelled by customer</small>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                @if (Model.Status == "Pending" || Model.Status == "Sent")
                {
                    <div class="card-footer bg-white p-4 border-top-0">
                        <div class="d-flex justify-content-end">
                            @if (Model.Status == "Pending")
                            {
                                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelOrderModal">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle me-1" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                                    </svg>
                                    Cancel Order
                                </button>
                            }
                            @if (Model.Status == "Sent")
                            {
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#confirmDeliveryModal">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle me-1" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                                    </svg>
                                    Confirm Delivery
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Products Card -->
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-white p-4 border-bottom-0">
                    <h3 class="card-title fw-bold mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-box2 text-primary me-2" viewBox="0 0 16 16">
                            <path d="M2.95.4a1 1 0 0 1 .8-.4h8.5a1 1 0 0 1 .8.4l2.85 3.8a.5.5 0 0 1 .1.3V15a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V4.5a.5.5 0 0 1 .1-.3zM7.5 1H3.75L1.5 4h6zm1 0v3h6l-2.25-3zM15 5H1v10h14z" />
                        </svg>
                        Order Items (@Model.RequestProducts.Count())
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="ps-4">Product</th>
                                    <th class="text-center">Quantity</th>
                                    <th>Location</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.RequestProducts)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="fw-medium">@product.ProductBrand</div>
                                            <div class="text-muted">@product.ProductModel</div>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge bg-primary rounded-pill px-3 py-2">@product.ProductQuantity pcs</span>
                                        </td>
                                        <td class="align-middle">
                                            <div class="d-flex align-items-center">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo me-2 text-secondary" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M8 1a3 3 0 1 0 0 6 3 3 0 0 0 0-6M4 4a4 4 0 1 1 4.5 3.969V13.5a.5.5 0 0 1-1 0V7.97A4 4 0 0 1 4 3.999zm2.493 8.574a.5.5 0 0 1-.411.575c-.712.118-1.28.295-1.655.493a1.319 1.319 0 0 0-.37.265.301.301 0 0 0-.057.09V14l.002.008a.147.147 0 0 0 .016.033.617.617 0 0 0 .145.15c.165.13.435.27.813.395.751.25 1.82.414 3.024.414s2.273-.163 3.024-.414c.378-.126.648-.265.813-.395a.619.619 0 0 0 .146-.15.148.148 0 0 0 .015-.033L12 14v-.004a.301.301 0 0 0-.057-.09 1.318 1.318 0 0 0-.37-.264c-.376-.198-.943-.375-1.655-.493a.5.5 0 1 1 .164-.986c.77.127 1.452.328 1.957.594C12.5 13 13 13.4 13 14c0 .426-.26.752-.544.977-.29.228-.68.413-1.116.558-.878.293-2.059.465-3.34.465-1.281 0-2.462-.172-3.34-.465-.436-.145-.826-.33-1.116-.558C3.26 14.752 3 14.426 3 14c0-.599.5-1 .961-1.243.505-.266 1.187-.467 1.957-.594a.5.5 0 0 1 .575.411" />
                                                </svg>
                                                Row @product.ProductRow, Section @product.ProductSection
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Modal for Confirming Cancellation -->
<div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-labelledby="cancelOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="cancelOrderModalLabel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                        <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z" />
                        <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z" />
                    </svg>
                    Confirm Order Cancellation
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="text-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-x-circle text-danger mb-3" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                    </svg>
                    <h4>Are you sure?</h4>
                    <p class="text-muted">You are about to cancel order #@Model.RequestID. This action cannot be undone.</p>
                </div>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">No, Keep Order</button>
                <a id="confirmCancelBtn" href="#" class="btn btn-danger">
                    Yes, Cancel Order
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Modal for Confirming Delivery -->
<div class="modal fade" id="confirmDeliveryModal" tabindex="-1" aria-labelledby="confirmDeliveryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="confirmDeliveryModalLabel">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-check-circle me-2" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                    </svg>
                    Confirm Delivery
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="text-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-box-seam-fill text-success mb-3" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15.528 2.973a.75.75 0 0 1 .472.696v8.662a.75.75 0 0 1-.472.696l-7.25 2.9a.75.75 0 0 1-.557 0l-7.25-2.9A.75.75 0 0 1 0 12.331V3.669a.75.75 0 0 1 .471-.696L7.443.184l.01-.003.268-.108a.75.75 0 0 1 .558 0l.268.108.01.003 6.97 2.789ZM10.404 2 4.25 4.461 1.846 3.5 1 3.839v.4l6.5 2.6v7.922l.5.2.5-.2V6.84l6.5-2.6v-.4l-.846-.339L8 5.961 5.596 5l6.154-2.461z" />
                    </svg>
                    <h4>Confirm Package Receipt</h4>
                    <p class="text-muted">Please confirm that you have received order #@Model.RequestID. This will mark the order as delivered.</p>
                </div>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">No, Not Yet</button>
                <a id="confirmDeliveryBtn" href="#" class="btn btn-success">
                    Yes, Confirm Delivery
                </a>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript to Handle Redirections -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector("#confirmCancelBtn").addEventListener("click", function () {
            window.location.href = '/PendingOrders/CancelOrder/@Model.RequestID';
        });

        document.querySelector("#confirmDeliveryBtn").addEventListener("click", function () {
            window.location.href = '/PendingOrders/ConfirmDelivery/@Model.RequestID';
        });
    });
</script>