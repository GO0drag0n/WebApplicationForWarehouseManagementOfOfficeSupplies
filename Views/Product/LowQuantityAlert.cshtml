@model IEnumerable<WebApplicationForWarehouseManagementOfOfficeSupplies.Models.Product>

@{
    ViewData["Title"] = "Low Stock Alerts";
}

<div class="container py-4">
    <h2 class="mb-4">
        <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
        Low Stock Alerts
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-success">
            All products are above their low‑stock thresholds.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Threshold</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Brand @p.Model</td>
                        <td>@p.Quantity</td>
                        <td>@p.MinQuantityThreshold</td>
                        <td>
                            <a asp-action="Edit"
                               asp-route-id="@p.ProductID"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square me-1"></i> Restock
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
