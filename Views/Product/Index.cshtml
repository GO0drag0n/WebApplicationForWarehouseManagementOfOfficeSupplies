<h2>Product List</h2>

<a class="btn btn-success mb-3" asp-action="Create">Add New Product</a>

<form asp-action="Index" method="get">
    <input type="text" name="searchByBrand" placeholder="Search by Brand" value="@ViewContext.HttpContext.Request.Query["searchByBrand"]" />
    <input type="text" name="searchByModel" placeholder="Search by Model" value="@ViewContext.HttpContext.Request.Query["searchByModel"]" />
    <button class="btn btn-primary" type="submit">Search</button>
</form>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Delivery Price</th>
            <th>Price</th>
            <th>Row</th>
            <th>Section</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.Brand</td>
                <td>@product.Model</td>
                <td>@product.Category?.Name</td>
                <td>@product.Quantity</td>
                <td>@product.DeliveryPrice.ToString("C")</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Row</td>
                <td>@product.Section</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@product.ProductID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
