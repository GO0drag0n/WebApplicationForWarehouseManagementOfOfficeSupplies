@model WebApplicationForWarehouseManagementOfOfficeSupplies.Models.EditProductViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-white p-4 border-bottom-0 d-flex justify-content-between align-items-center">
                    <h3 class="card-title fw-bold text-primary mb-0">
                        <i class="bi bi-box-seam me-2"></i>Edit Product
                    </h3>
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteProductModal">
                        <i class="bi bi-trash me-1"></i> Delete Product
                    </button>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ProductID" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Product Information -->
                        <h5 class="text-muted mb-3">Product Information</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Brand" class="form-control" placeholder="Brand" />
                                    <label asp-for="Brand">Brand</label>
                                    <span asp-validation-for="Brand" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Model" class="form-control" placeholder="Model" />
                                    <label asp-for="Model">Model</label>
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <select asp-for="CategoryID" class="form-select" asp-items="ViewBag.Categories"></select>
                                    <label asp-for="CategoryID">Category</label>
                                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Pricing -->
                        <h5 class="text-muted mb-3">Pricing</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DeliveryPrice" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                    <label asp-for="DeliveryPrice">Delivery Price</label>
                                    <span asp-validation-for="DeliveryPrice" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                    <label asp-for="Price">Selling Price</label>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Inventory & Location -->
                        <h5 class="text-muted mb-3">Inventory & Location</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Quantity" class="form-control" type="number" placeholder="0" />
                                    <label asp-for="Quantity">Quantity</label>
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Row" class="form-control" type="number" placeholder="0" />
                                    <label asp-for="Row">Row</label>
                                    <span asp-validation-for="Row" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Section" class="form-control" type="number" placeholder="0" />
                                    <label asp-for="Section">Section</label>
                                    <span asp-validation-for="Section" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Low Stock Threshold -->
                        <h5 class="text-muted mb-3">Low Stock Threshold</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="MinQuantityThreshold" class="form-control" type="number" placeholder="0" />
                                    <label asp-for="MinQuantityThreshold">Threshold</label>
                                    <span asp-validation-for="MinQuantityThreshold" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal (unchanged) -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
