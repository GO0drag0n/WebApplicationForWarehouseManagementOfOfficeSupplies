@model WebApplicationForWarehouseManagementOfOfficeSupplies.DTOs.ProductViewModel

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container mt-2">
    <div class="card" style="max-width: 500px; margin: auto;">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Add New Product</h4>
            <form asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="ProductBrand" class="form-label">Product brand</label>
                    <input asp-for="ProductBrand" class="form-control" />
                    <span asp-validation-for="ProductBrand" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductModel" class="form-label">Product Model</label>
                    <input asp-for="ProductModel" class="form-control" />
                    <span asp-validation-for="ProductModel" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductCategoryID" class="form-label">Product Category</label>
                    <div class="d-flex align-items-center">
                        <select asp-for="ProductCategoryID" class="form-select me-2" asp-items="Model.Categories"></select>
                        @if (User.IsInRole("Admin"))
                        {
                            <button type="button" id="openCreateCategoryModal" class="btn btn-secondary btn-sm">
                                New Category
                            </button>
                        }
                    </div>
                    <span asp-validation-for="ProductCategoryID" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductQuantity" class="form-label">Quantity (pcs.)</label>
                    <input asp-for="ProductQuantity" class="form-control" />
                    <span asp-validation-for="ProductQuantity" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductPrice" class="form-label">Selling Price</label>
                    <input asp-for="ProductPrice" class="form-control" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductDeliveryPrice" class="form-label">Delivery Price</label>
                    <input asp-for="ProductDeliveryPrice" class="form-control" />
                    <span asp-validation-for="ProductDeliveryPrice" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductRow" class="form-label">Storage Row</label>
                    <input asp-for="ProductRow" class="form-control" />
                    <span asp-validation-for="ProductRow" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ProductSection" class="form-label">Storage Section</label>
                    <input asp-for="ProductSection" class="form-control" />
                    <span asp-validation-for="ProductSection" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MinQuantityThreshold" class="form-label">Low Stock Threshold</label>
                    <input asp-for="MinQuantityThreshold" class="form-control" />
                    <span asp-validation-for="MinQuantityThreshold" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Add Product</button>
            </form>
        </div>
    </div>
</div>

