@{
    ViewData["Title"] = "Home";
}

<style>
    main {
        display: block !important;
    }
    
</style>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/Index.css" />
<section class="position-relative">
    <img src="~/images/industrial-park-factory-building-warehouse.jpg" alt="Warehouse Illustration" style="width:100%">
    <div class="position-absolute top-0 start-0 p-3 text-start text-primary mt-2 ms-5 w-100">
        <h1 class="fw-bold display-4 text-center text-md-start">
            Your <span class="text-warning">trusted partner</span> in storing <br> all kinds of stationery
        </h1>
        <div class="d-block d-md-none text-center mt-3">
            <button type="button"
                    class="btn btn-warning text-dark fw-bold"
                    style="padding: 0.75rem 1.5rem; font-size: 1.2rem;"
                    onclick="window.location='@Url.Action("AboutUs","Home")'">
                Learn More
            </button>
        </div>

    </div>

    <div class="position-absolute top-50 end-0 translate-middle-y p-3" style="margin-right:25rem">
        <a asp-controller="Home" asp-action="AboutUs"
           class="btn btn-warning text-dark fw-bold"
           style="padding: 1rem 2rem; font-size: 1.5rem;">
            Learn More
        </a>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                <img src="~/images/image(2).png" alt="Warehouse Shelving" class="img-fluid rounded" />
            </div>
            <div class="col-md-6 text-center text-md-start">
                <h2 class="fw-bold">TRUST US</h2>
                <hr class="mx-auto mx-md-0" style="width: 80px; height: 3px; background-color: #ffc107; border: none;" />
                <p class="mt-4 fs-5 mb-0">Maximize space with our range of metal racks!</p>
                <p class="fs-5">We have a wide variety of types of storage racks, from light weight shelves to fairly heavy goods.</p>
                <div class="row g-4 mt-3">
                    <div class="col-6 col-sm-4">
                        <h4 class="fw-bold display-6 mb-0">10,303<span class="text-warning">+</span></h4>
                        <p>Satisfied customers</p>
                    </div>
                    <div class="col-6 col-sm-4">
                        <h4 class="fw-bold display-6 mb-0">10<span class="text-warning">+</span></h4>
                        <p>Years of experience</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5" style="background-color:white">
    <div class="container text-center" style="margin-bottom:7rem;">
        <h2 class="fw-bold">OUR FEATURES</h2>
        <hr class="mx-auto" style="width: 80px; height: 3px; background-color: #ffc107; border: none;" />
    </div>

    <div style="background-color: #ffc107;">
        <div class="container py-3 " style="overflow: visible;">
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0 text-dark">
                    <h3 class="fw-bold">Flawless order system</h3>
                    <p class="lead mb-0">Our flawless order system ensures seamless inventory management and efficient order fulfillment in our storage warehouse stationery company.</p>
                </div>
                <div class="col-md-6 text-center">
                    <img src="~/images/image(3).png" alt="Flawless Order System" class="img-fluid rounded feature-img"  />
                </div>
            </div>
        </div>
    </div>

    <div style="background-color: #ffc107; margin-top:10rem;">
        <div class="container py-0 " style="overflow: visible;">
            <div class="row align-items-center">
                <div class="col-md-6 text-center">
                    <img src="~/images/image(4).png" alt="Low Quantity Alerts" class="img-fluid rounded feature-img"  />
                </div>
                <div class="col-md-6 mb-2 mb-md-0 text-dark">
                    <h3 class="fw-bold">Low quantity alerts</h3>
                    <p class="lead mb-0">By providing timely notifications, the feature helps maintain optimal supply levels, reduce operational disruptions, and streamline restocking processes.</p>
                </div>
            </div>
        </div>
    </div>

    <div style="background-color: #ffc107; margin-top:10rem">
        <div class="container py-3 " style="overflow: visible;">
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0 text-dark">
                    <h3 class="fw-bold">Inventory management</h3>
                    <p class="lead mb-0">We receive products directly from your supplier, enabling you to handle and track inventory in real-time, with a few clicks.</p>
                </div>
                <div class="col-md-6 text-center">
                    <img src="~/images/image(5).png" alt="Inventory Management" class="img-fluid rounded feature-img"  />
                </div>
            </div>
        </div>
    </div>

    <div style="background-color: #ffc107; margin-top:10rem;">
        <div class="container py-0 " style="overflow: visible;">
            <div class="row align-items-center">
                <div class="col-md-6 text-center">
                    <img src="~/images/image(6).png" alt="Bulk Order" class="img-fluid rounded feature-img"  />
                </div>
                <div class="col-md-6 mb-2 mb-md-0 text-dark">
                    <h3 class="fw-bold">The easiest way to order in bulk</h3>
                    <p class="lead mb-0">Keep your workspace stocked without the hassle. Whether you're ordering for an office, school, or retail store, our system ensures a seamless and efficient bulk purchasing experience.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 mb-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">REVIEWS FROM CLIENTS</h2>
            <hr class="mx-auto" style="width: 100px; height: 3px; background-color: #ffc107; border: none;" />
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            <div class="col">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <div class="card-footer bg-white border-0 p-0">
                            <div class="d-flex align-items-start ">
                                <img src="~/images/avatar1.png" alt="Reviewer" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;" />
                                <div>
                                    <h6 class="fw-bold mb-0">CECILY KNIGHT</h6>
                                    <small class="text-muted">CEO</small>
                                </div>
                            </div>
                        </div>
