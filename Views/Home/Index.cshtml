@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5 text-center">
    <h1 class="display-4 fw-bold mb-4">Welcome to WareSmart</h1>
    <p class="lead text-muted">
        Manage your company, workers, and inventory efficiently.
    </p>
    <hr class="my-4" />
    <div class="d-flex justify-content-center">
        <a asp-controller="Company" asp-action="Index" class="btn btn-primary btn-lg mx-2">
            <i class="bi bi-building"></i> View Companies
        </a>
        <a asp-controller="Account" asp-action="Manage" class="btn btn-secondary btn-lg mx-2">
            <i class="bi bi-person"></i> Manage Account
        </a>
    </div>
</div>
