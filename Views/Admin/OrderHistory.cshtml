@model List<WebApplicationForWarehouseManagementOfOfficeSupplies.Models.Request>

@{
    ViewData["Title"] = "Order History";
}

<div class="container mt-5">
    <h2 class="mb-4">
        <i class="bi bi-clock-history me-2 text-primary"></i>All Company Requests
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No requests found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Request ID</th>
                        <th>Company</th>
                        <th>Requested By</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>@request.RequestID</td>
                            <td>@request.Company?.CompanyName</td>
                            <td>@($"{request.User?.FirstName} {request.User?.LastName}")</td>
                            <td>@request.CreatedAt.ToString("g")</td>
                            <td>@request.Status</td>
                            <td>
                                <a asp-controller="Request" asp-action="Details" asp-route-id="@request.RequestID" class="btn btn-sm btn-outline-primary">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
