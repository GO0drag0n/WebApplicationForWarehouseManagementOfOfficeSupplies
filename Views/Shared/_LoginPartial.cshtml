@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-white fw-bold" asp-controller="Account" asp-action="Manage" title="Manage">
                Hello @User.Identity.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white fw-bold">Logout</button>
                @Html.AntiForgeryToken()
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white fw-bold" asp-controller="Account" asp-action="RegisterStep1">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white fw-bold" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>

