@model IEnumerable<WebApplicationForWarehouseManagementOfOfficeSupplies.Models.Request>

@{
    ViewBag.Title = "Company Order History";
}

<div class="container py-4">
    <h2 class="text-center mb-4">Company Order History</h2>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th class="text-end">Total Price</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.RequestID</td>
                            <td>
                                @if (order.FinishedOrderDate.HasValue)
                                {
                                    @order.FinishedOrderDate.Value.ToString("yyyy-MM-dd")
                                }
                                else
                                {
                                    @order.CreatedAt.ToString("yyyy-MM-dd")
                                }
                            </td>
                            <td>@order.Status</td>
                            <td class="text-end">@order.TotalPrice.ToString("C")</td>
                            <td class="text-center">
                                <a asp-controller="PendingOrders" asp-action="CompanyOrderDetails" asp-route-id="@order.RequestID" class="btn btn-sm btn-primary">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-4">No orders found for your company.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
